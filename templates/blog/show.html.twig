{% extends 'base.html.twig' %}
{% block title %}Blog symfony - {{ article.title }}{% endblock %}
{% block body %}
<div class="row">
    <article class="border-top border-bottom p-5">
        <h2>{{ article.title }}</h2>
        <small>Ecrit le {{ article.createdAt | date('d/m/Y') }} Ã  {{ article.createdAt | date('H:i') }}</small>
        <div class="mt-3 mb-3 text-center">
            <img src="{{ article.image }}" alt="random image" class="rounded shadow-sm">
        </div>
        <div class="mb-1">
            <p>{{ article.content | raw }}</p>
        </div>
    </article>
</div>
{% endblock %}